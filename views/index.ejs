<div class="d-flex flex-column justify-content-center">
  <h2 class="text-center" id="contact-form-title">CONTACT US</h2>
  <form
    class="row d-flex justify-content-center text-center m-auto w-50"
    action="/contact"
    method="POST"
    id="contact-form"
    onsubmit="confirmation()"
  >
    <div class="col-md-6 p-1">
      <input
        class="w-100"
        id="nombre"
        type="text"
        name="nombre"
        placeholder="Nombre"

<div class="input-group mb-3">
  <span class="input-group-text bg-primary"
    ><i class="bi bi-person-plus-fill text-white"></i
  ></span>
  <input
    type="text"
    class="form-control"
    placeholder="Name"
    id="edit-name"
    required
  />
</div>
<div class="input-group mb-3">
  <span class="input-group-text bg-primary"
    ><i class="bi bi-person-plus-fill text-white"></i
  ></span>
  <input
    class="form-control"
    type="text"
    placeholder="Username"
    id="edit-username"
    required
  />
</div>
<div class="alert alert-danger d-none" role="alert" id="username-taken">
  Username already in use
</div>
<div class="input-group mb-3">
  <span class="input-group-text bg-primary"
    ><i class="bi bi-envelope text-white"></i
  ></span>
  <input
    type="email"
    class="form-control"
    placeholder="Email"
    id="edit-email"
    required
  />
</div>
<div class="alert alert-danger d-none" role="alert" id="email-taken">
  Email already in use
</div>

<body>
  <div class="register">
    <h2 class="text-center align-items-center mb-3" id="register-title">
      Create account
    </h2>
    <form
      method="POST"
      class="w-75 m-auto row"
      id="register-form"
      onsubmit="sendRegisterData()"
    >
      <div class="input-div">
        <label for="name" class="w-25">Name</label>
        <input
          name="name"
          class="register-inputs"
          type="text"
          id="name"
          required
        />
      </div>
      <div class="input-div">
        <label for="username" class="w-25">Username</label>
        <input name="username" class="register-inputs" id="username" required />
      </div>
      <div class="input-div">
        <label for="email" class="w-25">Email</label>
        <input name="email" class="register-inputs" id="email" required />
      </div>
      <div class="input-div">
        <label for="password" class="w-25">Password</label>
        <input
          name="password"
          type="password"
          class="register-inputs"
          id="password"
          required
        />
      </div>
      <div class="input-div">
        <label for="repeat-password" class="w-25">Repeat password</label>
        <input
          name="repeat-password"
          type="password"
          class="register-inputs"
          id="repeat-password"
          required
        />
      </div>
      <div class="d-flex justify-content-center">
        <span class="m-auto bg-danger rounded px-1 d-none" id="password-error"
          >Passwords do not match</span
        >
      </div>
      <div class="d-flex justify-content-center">
        <span class="m-auto bg-danger rounded px-1 d-none" id="invalid-password"
          >Password must be at least 8 characters long</span
        >
      </div>
      <button
        class="w-50 m-auto my-2 rounded bg-white"
        id="users-submit-button"
      >
        Crear
      </button>
    </form>
  </div>
</body>
